<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="sale_order_portal_content"
        inherit_id="sale.sale_order_portal_content"
    >
        <xpath expr="//th[@id='product_name_header']" position="after">
            <t t-if="sale_order.resource_booking_count">
                <th name="th_booking_start_date">Start Date</th>
            </t>
       </xpath>
        <xpath expr="//td[@id='product_name']" position="after">
            <t t-if="sale_order.resource_booking_count">
                <td name="th_booking_start_date">
                    <span t-field="line.resource_booking_ids.start" />
                </td>
            </t>
        </xpath>
    </template>
</odoo>
